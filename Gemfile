source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'haml'
gem 'haml-rails'
gem 'simple_form'
gem 'responders'
gem 'devise'

group :test do
  gem 'rails3-generators'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
end